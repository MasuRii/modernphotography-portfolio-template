---
import DemoBanner from '../components/demo/DemoBanner.astro';
import DemoModal from '../components/demo/DemoModal.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Modern Photography Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline>
      // Theme Initialization
      (function() {
        const storedTheme = localStorage.getItem('theme');
        const systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        
        // Default to dark if no storage, or if storage says dark
        // If storage says light, remove dark class
        // Since 'dark' class is on <html> by default in SSG, we only need to remove it if:
        // 1. storedTheme is 'light'
        // 2. no storedTheme AND system is light (optional, but plan says dark default)
        // Plan says: "dark mode as default".
        // Research 1.3.1: "dark mode preference".
        
        if (storedTheme === 'light' || (!storedTheme && !systemDark)) {
          document.documentElement.classList.remove('dark');
        } else {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>
  <body class="bg-[#0a0a0a] text-gray-100 min-h-screen antialiased selection:bg-indigo-500 selection:text-white">
    <DemoBanner />
    
    <main class="relative z-10">
      <slot />
    </main>

    <DemoModal />
  </body>
</html>
