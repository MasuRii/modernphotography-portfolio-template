---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import galleryImages from '../data/gallery-images.json';
import PrintCard from '../components/shop/PrintCard.astro';

const title = "Print Shop | Modern Photography Portfolio";
const description = "Limited edition fine art prints available for purchase.";

// Get image imports
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/images/gallery/**/*.{jpeg,jpg,png,gif}');

// Filter and resolve images
const printImages = await Promise.all(
  galleryImages
    .filter(img => img.printAvailable)
    .map(async (img) => {
      const key = `/src/assets${img.src}`;
      const imageLoader = images[key];
      const imageData = imageLoader ? (await imageLoader()).default : null;
      return { ...img, imageData };
    })
);
---

<BaseLayout title={title} description={description}>
  <section class="min-h-screen pt-32 pb-20 px-6 md:px-12 lg:px-20 bg-[#0a0a0a] text-neutral-300">
    <div class="max-w-7xl mx-auto mb-16">
      <h1 class="font-serif text-4xl md:text-5xl lg:text-6xl text-white mb-6 tracking-tight">
        Print Shop
      </h1>
      <p class="text-lg font-light leading-relaxed text-neutral-400 max-w-2xl">
        Select works available as museum-quality gicl√©e prints. Each print is produced on archival cotton rag paper, signed, and numbered.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-16">
      {printImages.map((image) => (
        image.imageData ? (
          <PrintCard 
            image={image.imageData}
            title={image.title}
            category={image.category}
          />
        ) : null
      ))}
    </div>
  </section>
</BaseLayout>
